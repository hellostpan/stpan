<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/animation"
        android:id="@+id/iv_act_animation"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_800"
            android:text="左"
            android:padding="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tv_act_animation_left"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_800"
            android:text="上"
            android:padding="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tv_act_animation_top"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_800"
            android:text="下"
            android:padding="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tv_act_animation_bottom"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_800"
            android:text="右"
            android:padding="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/tv_act_animation_right"
            />
    </LinearLayout>
</RelativeLayout>