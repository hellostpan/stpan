<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_act_001"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/f_static_001" />

    <ImageView
        android:id="@+id/iv_act_002"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/f_static_002" />

    <ImageView
        android:id="@+id/iv_act_003"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/f_static_003" />

    <ImageView
        android:id="@+id/iv_act_004"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/f_static_004" />

    <ImageView
        android:id="@+id/iv_act_005"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/f_static_006" />

    <ImageView
        android:id="@+id/iv_act_006"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/f_static_009" />

    <LinearLayout
        android:id="@+id/ll_act_animator_main"
        android:layout_width="64dp"
        android:layout_height="64dp"

        android:background="@drawable/shape_bule"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_act_animator_main"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="click"
            android:src="@mipmap/ic_add_white_18dp" />
    </LinearLayout>
</FrameLayout>