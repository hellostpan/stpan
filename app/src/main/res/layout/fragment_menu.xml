<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/linear_fragment_menu_title"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/linear_fragment_menu_change_community"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
            <TextView
                    android:id="@+id/tv_fragment_menu_community"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text=""/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="[切换]"/>
        </LinearLayout>

    </LinearLayout>

    <Button
            android:id="@+id/btn_fragment_menu_exit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="退出"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />

    <ListView
            android:id="@+id/lv_fragment_menu_list"
            android:layout_below="@id/linear_fragment_menu_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_fragment_menu_exit"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@null"
            android:dividerHeight="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

    </ListView>
</RelativeLayout>
